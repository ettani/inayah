<!-- Header Start -->
<header class="position-absolute w-100 top0">
    <div class="container-fluid">





        <div class="top-header d-none d-sm-flex justify-content-between align-items-center position-absolute">
            <div class="d-flex aic">
                <ul class="nav social d-none d-md-flex">
                    <li><a href="#" target="_blank"><i class="fab fa-instagram"></i></a></li>
                    <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                    <li><a href="#"><i class="fab fa-snapchat-ghost"></i></a></li>
                </ul>
            </div>
        </div>

        <nav class="navbar navbar-expand-md navbar-light">
            {% if app.request.get('_route') is same as 'identity_update' %}
            <a class="navbar-brand" href="{{ path('default_index') }}"><img src="{{ asset('uploads/images/' ~ identity.logo.filename) }}" alt="{{ identity.name }}"></a>
            {% else %}
            <a class="navbar-brand" href="{{ path('default_index') }}"><img src="{{ asset('uploads/images/' ~ identity.logo) }}" alt="{{ identity.name }}"></a>
            {% endif %}
            <div class="group d-flex align-items-center">
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse justify-content-end mr-5" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="{{ path('default_index') }}">Accueil</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('agir_agir') }}">Agir</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('actualite_actualite') }}">Actualité</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('don') }}">Faire un don</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('message-create') }}">Contact</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Administration</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="{{ path('admin_dashboard') }}">Administration</a></li>
                                <li><a class="dropdown-item" href="{{ path('post_create') }}">Rédiger un article</a></li>
                                <li><a class="dropdown-item" href="{{ path('user-resetpassword') }}">Modification mot de passe</a></li>
                                <li><a class="dropdown-item" href="{{ path('identity_update') }}">Configuration</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="{{ path('app_logout') }}">Deconnexion</a></li>
                            </ul>
                        </li>
                    {% else %}

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                               aria-expanded="false">Compte</a>
                            <ul class="dropdown-menu">
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li><a class="dropdown-item" href="{{ path('user-resetpassword') }}">Modification mot de passe</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">Deconnexion</a></li>
                                {% else %}
                                    <li><a class="dropdown-item" href="{{ path('user-create') }}">Demande d'aide</a></li>
                                    <li><a class="dropdown-item" href="{{ path('user-create') }}">Inscription</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_login') }}">Connexion</a></li>
                                {% endif %}
                            </ul>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>

    </div>
    <div class="messagedefilant">
        <p>{{ identity.banner }}</p>
    </div>

</header>

<!-- Header End -->