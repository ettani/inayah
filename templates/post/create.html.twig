{% extends "base.html.twig" %}

{% block title %}Créer un article{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/ckeditor_24.0.0.js') }}"></script>
        <script>
            ClassicEditor.create( document.querySelector( '#post_content' ) );
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/js/dropify.min.js"
                integrity="sha512-8QFTrG0oeOiyWo/VM9Y8kgxdlCryqhIxVeRpWSezdRRAvarxVtwLnGroJgnVW9/XBRduxO/z1GblzPrMQoeuew=="
                crossorigin="anonymous"></script>

        <script>
            {#$('#post_image').attr("data-default-file", "{{ asset('uploads/images/' ~ post.image.filename) }}");#}
            {#$('#post_image2').attr("data-default-file", "{{ asset('uploads/images/' ~ post.image2.filename) }}");#}
            {#$('#post_image3').attr("data-default-file", "{{ asset('uploads/images/' ~ post.image3.filename) }}");#}
            {#$('#post_image4').attr("data-default-file", "{{ asset('uploads/images/' ~ post.image4.filename) }}");#}
            $('.dropify').dropify({
                messages: {
                    default: 'Glissez-déposez un fichier ici ou cliquez',
                    replace: 'Glissez-déposez un fichier ou cliquez pour remplacer',
                    remove:  'Supprimer',
                    error:   'Désolé; le fichier est trop volumineux'
                }
            });
        </script>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/css/dropify.min.css"
          integrity="sha512-EZSUkJWTjzDlspOoPSpUFR0o0Xy7jdzW//6qhUkoZ9c4StFkVsp9fbbd0O06p9ELS3H486m4wmrCELjza4JEog=="
          crossorigin="anonymous"/>

    <style>
        .custom-file-label {
            display: none;
        }

        .dropify-wrapper .dropify-message p {
            font-size: 15px;
        }
    </style>

{% endblock %}

{% block body %}

    <img class="header-logo mb-5" src="{{ asset('uploads/images/' ~ identity.headerpic) }}" alt="logo-header">
    <div class="p-3 my-5 mx-auto text-center">
        <h1 class="display-4">Créer un article</h1>
    </div>
    <div class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="row">
                        <div class="mb-4 mx-auto">

                            {{ form_label(form.title) }}
                            {{ form_widget(form.title) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-4 mx-auto">
                            {{ form_label(form.content) }}
                            {{ form_widget(form.content) }}
                        </div>
                        <div class="col-md-6 mb-4 mx-auto">
                            <div class="row">
                                <div class="col-sm-6">
                                    {{ form_label(form.image) }}
                                    {{ form_widget(form.image) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_label(form.image2) }}
                                    {{ form_widget(form.image2) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    {{ form_label(form.image3) }}
                                    {{ form_widget(form.image3) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_label(form.image4) }}
                                    {{ form_widget(form.image4) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-4 mx-auto">
                            {{ form_label(form.submit) }}
                            {{ form_widget(form.submit) }}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div><!--fin row-->
        </div><!--fin container-->
    </div><!--fin bg light-->
{% endblock %}