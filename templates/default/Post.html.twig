{% extends 'base.html.twig' %}

{% block title %}
    {{ post.title }}
{% endblock %}

{% block body %}
    <img class="header-logo mb-5" src="{{ asset('uploads/images/' ~ identity.headerpic) }}" alt="logo-header">

<div class="py-5 container mt-3">
    <div class="p-3 mx-auto text-center mt-5">
        <h1 class="display-4">{{ post.title }}</h1>
    </div>
    <div class="jumbotron ">
        <div class="row">
            <div class="col-md-6 mb-3">
                {% if (post.image != null) %}
                    <img data-toggle="modal" data-target="#modal1" class="modal-pic-first img-fluid" src="{{ asset('uploads/images/' ~ post.image) }}" alt="{{ post.title }}">
                    <div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content position-relative p-3">
                                <img data-dismiss="modal" class="modal-pic-big" src="{{ asset('uploads/images/' ~ post.image) }}" alt="{{ post.title }}">
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
            <div class="col-md-6">
                {{ post.content | raw }}
            </div>
        </div>
        <div class="row">
            {% if (post.image2 != null or post.image3 != null or post.image4 != null) %}
            <h2>Galerie d'images</h2>
            {% endif %}
            {% if (post.image2 != null) %}
            <div class="col-md-4 mb-3">
                <img data-toggle="modal" data-target="#modal2" class="modal-pic d-block mx-auto" src="{{ asset('uploads/images/' ~ post.image2) }}" alt="{{ post.title }}">
                <div class="modal fade" id="modal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content position-relative p-3">
                            <img data-dismiss="modal" class="modal-pic-big" src="{{ asset('uploads/images/' ~ post.image2) }}" alt="{{ post.title }}">
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            {% if (post.image3 != null) %}
            <div class="col-md-4 mb-3">
                <img data-toggle="modal" data-target="#modal3" class="modal-pic d-block mx-auto" src="{{ asset('uploads/images/' ~ post.image3) }}" alt="{{ post.title }}">
                <div class="modal fade" id="modal3" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content position-relative p-3">
                            <img data-dismiss="modal" class="modal-pic-big" src="{{ asset('uploads/images/' ~ post.image3) }}" alt="{{ post.title }}">
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            {% if (post.image4 != null) %}
            <div class="col-md-4 mb-3">
                <img data-toggle="modal" data-target="#modal4" class="modal-pic d-block mx-auto" src="{{ asset('uploads/images/' ~ post.image4) }}" alt="{{ post.title }}">
                <div class="modal fade" id="modal4" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content position-relative p-3">
                            <img data-dismiss="modal" class="modal-pic-big" src="{{ asset('uploads/images/' ~ post.image4) }}" alt="{{ post.title }}">
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
        <div class="col-md-7 col-lg-5 mt-3">
            {% if  is_granted('ROLE_ADMIN') %}
                <a class="btn btn-warning btn-block mt-2"
                   href="{{ path('post_update', { 'id' : post.id }) }}">
                    Modifier cet Article
                </a>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-danger btn-block mt-2"
                   href="{{ path('post_delete', { 'id' : post.id }) }}">
                    Supprimer cet Article
                </a>
            {% endif %}
        </div>
    </div>
</div>

























{% endblock %}
