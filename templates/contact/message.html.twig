{% extends "base.html.twig" %}

{% block title %}Contactez Nous{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.ckeditor.com/ckeditor5/23.1.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor.create(document.querySelector('#form_content'));
    </script>

{% endblock %}


{% block body %}
    <img class="header-logo mb-5" src="{{ asset('uploads/images/' ~ identity.headerpic) }}"alt="logo-header">
    {# {{ dump(posts) }}
    {# -- .p-3.mx-auto.text-center>h1.diplay-4 -- #}
    <div class="container mx-auto my-5">
        <div class="row mt-5">
            <div class="col-lg-6 mx-auto">
                <h1 class="text-center">Contactez-nous</h1>
                <div class="p-5 mb-5 bg-light">
                    {{ form(form, {attr: {novalidate: 'novalidate'}}) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row  mb-lg-6 col-md-12 col-sm-12 mx-auto" style="margin-bottom: 40px">
        <div class="adress col-md-6 col-sm-12 mx-auto "><img src="{{ asset('uploads/images/' ~ identity.logo)
            }}"alt="logo" style="width: 70px" >
            <p class="mx-auto"><strong>{{ identity.name }}</strong><br>
                {{ identity.adress }},<br> {{ identity.cp }} {{ identity.city }}</p>
        </div>

            <div class=" maps  col-md-6 col-sm-12 mx-auto ">
                <iframe class="mx-auto" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3749.9156387870007!2d1.9916831508940864!3d48.34917059624932!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e44a36288cf41f%3A0xc9cdeb94da30209!2s{{ identity.adress }}{{ identity.cp }}{{ identity.city }}!5e0!3m2!1sfr!2sfr!4v1608551233567!5m2!1sfr!2sfr"
                        width="450" height="250" frameborder="0" style="border:0; margin-top: 50px; width: 100%;" allowfullscreen="" aria-hidden="false"
                        tabindex="0"></iframe>
            </div>

    </div>
{% endblock %}